<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LIST HERO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body style="background-color: black;">
  <table class="table">
    <thead>
      <tr style="color: white;">
        <th scope="col">NO</th>
        <th scope="col">HERO NAME</th>
        <th scope="col"></th>
        <th scope="col">BUTTON</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% hero.forEach(function (data, index) { %>
      <tr>
        <th scope="row" style="color: white;"><%= index + 1 %></th>
        <td style="color: white;"><%= data.heroName %></td>
        <td>
          <a href="/hero/biodata?id=<%=data.id%>" target="_blank"><button type="button" class="btn btn-outline-primary">BIODATA</button></a>
        </td>
        <td>
          <a href="/hero/update?id=<%=data.id%>" target="_blank"><button type="button"
              class="btn btn-outline-secondary">UPDATE</button></a>
        </td>
        <td>
          <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
            data-bs-target="#exampleModal<%=data.id%>">DELETE</button>
          <!-- Modal -->
          <div class="modal fade" id="exampleModal<%=data.id%>" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">DELETE DATA</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  ARE YOU SURE YOU WANT TO DELETE THIS DATA?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">NO</button>
                  <form action="/hero/delete?id=<%=data.id%>" method="post">
                    <button type="submit" class="btn btn-outline-danger">YES</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <br>
  <a href="/hero/add" target="_blank"><button type="button" class="btn btn-outline-success">ADD HERO</button></a>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>
</html> 